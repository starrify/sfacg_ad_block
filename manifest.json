{
    "manifest_version": 2,
    "name": "RMAD_SFACG",
    "description": "A testing Chrome Extension for removing ad for sfacg.com.",
    "version": "0.1",
    "permissions": 
    [
        "http://comic.sfacg.com/*",
        "https://comic.sfacg.com/*"
    ],
    "content_scripts": 
    [
        {
            "matches": 
            [ 
                "*://comic.sfacg.com/*"
            ],
            "js": 
            [
                "remover.js" 
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": 
    {
        //"default_icon": "",
    }
}
